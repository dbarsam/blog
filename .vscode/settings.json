{
    "files.trimTrailingWhitespace": true,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.exclude": {
        "**/*.pyc": true,
        "**/__pycache__": true,
    },
    "cSpell.words": [
        "addsitedir",
        "AUTOATTACH",
        "backticks",
        "builtins",
        "cmdcmdline",
        "cmder",
        "codehilite",
        "COMSPEC",
        "Conda",
        "cookiecutter",
        "cppvsdbg",
        "debugpy",
        "eval",
        "globstar",
        "linenums",
        "monospace",
        "pelicanconf",
        "Podge",
        "ptvsd",
        "pymdown",
        "pymdownx",
        "pymxs",
        "PYTHONPATH",
        "pyvenv",
        "REUSEADDR",
        "setuptools",
        "submodule",
        "submodules",
        "superfences",
        "symlink",
        "venv",
        "virtualenv"
    ],
    "cSpell.languageSettings": [
        {
            "languageId": "python",
            "includeRegExpList": [
                "/#.*/",                       // In-line comments
                "/('''|\"\"\")[^\\1]+?\\1/g"   // Block comments
            ]
        },
        {
            "languageId": "markdown",
            "ignoreRegExpList": [
                "/^```(?:.|\\s)+?^```/mig",      // Code fences
                "/^````(?:.|\\s)+?^````/mig"     // Meta Code fences
            ]
        }
    ],
}
