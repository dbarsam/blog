{
    "files.trimTrailingWhitespace": true,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.exclude": {
        "**/*.pyc": true,
        "**/__pycache__": true,
    },
    "cSpell.words": [
        "addsitedir",
        "AUTOATTACH",
        "backticks",
        "builtins",
        "cmdcmdline",
        "cmder",
        "codehilite",
        "COMSPEC",
        "Conda",
        "cookiecutter",
        "cppvsdbg",
        "debugpy",
        "eval",
        "globstar",
        "linenums",
        "monospace",
        "pelicanconf",
        "Podge",
        "ptvsd",
        "pymdown",
        "pymdownx",
        "pymxs",
        "PYTHONPATH",
        "pyvenv",
        "REUSEADDR",
        "setuptools",
        "submodule",
        "submodules",
        "superfences",
        "symlink",
        "venv",
        "virtualenv"
    ],
    "cSpell.languageSettings": [
        {
            "languageId": "python",
            "includeRegExpList": [
                "/#.*/",                       // In-line comments
                "/('''|\"\"\")[^\\1]+?\\1/g"   // Block comments
            ]
        },
        {
            "languageId": "markdown",
            "ignoreRegExpList": [
                "/^```(?:.|\\s)+?^```/mig",      // Code fences
                "/^````(?:.|\\s)+?^````/mig"     // Meta Code fences
            ]
        }
    ],
    "frontMatter.content.pageFolders": [
        {
            "title": "Articles",
            "path": "[[workspace]]/content/articles"
        }
    ],
    "frontMatter.preview.host": "http://localhost:8000/",
    "frontMatter.content.autoUpdateDate": true,
    "frontMatter.taxonomy.modifiedField": "modified",
    "markdown.preview.scrollEditorWithPreview": false,
    "[markdown]": {
        "editor.fontSize": 14,
        "editor.lineHeight": 26,
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 64,
        "editor.lineNumbers": "off",
        "editor.quickSuggestions": false,
        "editor.minimap.enabled": false
    },

}
