{
    "files.trimTrailingWhitespace": true,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.exclude": {
        "**/*.pyc": true,
        "**/__pycache__": true,
    },
    "cSpell.words": [
        "backticks",
        "cmdcmdline",
        "cmder",
        "codehilite",
        "eval",
        "linenums",
        "monospace",
        "pelicanconf",
        "pymdown",
        "pymdownx",
        "submodule",
        "submodules",
        "superfences",
        "symlink"
    ],
    "cSpell.languageSettings": [
        {
            "languageId": "python",
            "includeRegExpList": [
                "/#.*/",                       // In-line comments
                "/('''|\"\"\")[^\\1]+?\\1/g"   // Block comments
            ]
        },
        {
            "languageId": "markdown",
            "ignoreRegExpList": [
                "/^```(?:.|\\s)+?^```/mig",      // Code fences
                "/^````(?:.|\\s)+?^````/mig"     // Meta Code fences
            ]
        }
    ],
}
